{
    "name": "color-tabs-vscode-ext",
    "displayName": "color-tabs-vscode-ext",
    "description": "changes the active tab color based on regex",
    "version": "0.0.1",
    "publisher": "orepor",
    "repository": {"url": "https://github.com/oreporan/color-tabs-vscode"},
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "ColorTabs",
            "properties": {
                "colorTabs.paths": {
                    "type": "array",
                    "default": [".*\/web\/.*", ".*\/mobile\/.*"],
                    "description": "list of regex paths"
                },
                "colorTabs.colors": {
                    "type": "array",
                    "default": ["#ff0000", "#00ff00"],
                    "description": "list of colors to match the paths array"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
